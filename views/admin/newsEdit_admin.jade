extends admin_layout

block content
    .container
        h2 ▶ News 수정
        br
        br
        .row(style='width: 80%; margin: auto;')
            form(method='post', action='/admin/news/edit/' + news.idx)
                table.table.table-bordered
                    tr
                        th(style='text-align: center;background-color: #F8F4EC; width:20%;') 글번호
                        td(style='text-align: center; width:20%;')= news.idx
                        th(style='text-align: center;background-color: #F8F4EC;') 작성일
                        td(style='text-align:center')
                            = moment(news.date).format("YYYY/MM/DD hh:mm:ss")
                    tr
                        th(style='text-align: center;background-color: #F8F4EC;') 작성자
                        td(colspan='3')= news.writer
                    tr
                        th(style='text-align: center;background-color: #F8F4EC;') 제목
                        td(colspan='3')
                            input.form-control(type='text', name='title', value=news.title)
                    tr
                        th(style='text-align: center;background-color: #F8F4EC;') 글내용
                        td(colspan='3')
                            textarea.form-control(rows='30', name='content', style='resize: none;')
                                = news.content
                br
                .col-md-offset-9
                    input#editBtn.btn.btn-success.btn-lg(type='submit', value='완료')
                    a.btn.btn-default.btn-lg(href='/admin/news/') 취소
